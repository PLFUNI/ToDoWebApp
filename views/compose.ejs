<%- include('partials/header'); -%>
  <header>
    <h1 id="compose-h1">Create new ToDo list</h1>
  </header>
  <form method="post" action="/compose" id="form-content">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="form-floating">
          <textarea name="title" class="form-control" placeholder="Write a title for the ToDo list" id="floatingTextarea1"
            style="height: 100px"></textarea>
          <label for="floatingTextarea1">Title</label>
        </div>
      </div>
    </div>




    <button type="submit" id="publish_btn">Add</button>
  </form>
  <%- include('partials/footer'); -%>